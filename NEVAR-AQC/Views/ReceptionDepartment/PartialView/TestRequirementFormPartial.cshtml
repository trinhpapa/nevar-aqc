@{
    Layout = null;
}
<form id="test-requirement-form" style="        display: none">
    <div class="form-row mb-2">
        <div class="col-sm-2">
            <label>Lĩnh vực:</label>
        </div>
        <div class="col-sm-10">
            <select id="test-field" class="form-control form-control-sm" asp-items="@ViewData["CTGField"] as SelectList"></select>
        </div>
    </div>
    <div class="form-row mb-2">
        <div class="col-sm-2">
            <label>Tên khách hàng:</label>
        </div>
        <div class="col-sm-10">
            <input type="text" id="test-customer-name" class="customer-name form-control form-control-sm" maxlength="500" />
        </div>
    </div>
    <div class="form-row mb-2">
        <div class="col-sm-2">
            <label>Người đại diện:</label>
        </div>
        <div class="col-sm-10">
            <input type="text" id="test-representative" class="form-control form-control-sm" maxlength="200" />
        </div>
    </div>
    <div class="form-row mb-2">
        <div class="col-sm-2">
            <label>Địa chỉ:</label>
        </div>
        <div class="col-sm-10">
            <input type="text" id="test-customer-address" class="customer-address form-control form-control-sm" maxlength="1000" />
        </div>
    </div>
    <div class="form-row mb-2">
        <div class="col-sm-2">
            <label>Thông tin khác:</label>
        </div>
        <div class="col-sm-10">
            <input type="text" id="test-symbol-specimen-note" class="form-control form-control-sm" maxlength="200" />
        </div>
    </div>
    <div class="form-row mb-2">
        <div class="col-sm-2">
            <label class="">Sử dụng nhà thầu phụ:&nbsp;&nbsp;&nbsp;</label>
        </div>
        <div class="col-sm-4">
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="IsUseSubcontractorsYes" name="TestIsUseSubcontractors" class="custom-control-input" value="true">
                <label class="custom-control-label" for="IsUseSubcontractorsYes">Có</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="IsUseSubcontractorsYesNo" name="TestIsUseSubcontractors" class="custom-control-input" value="false" checked>
                <label class="custom-control-label" for="IsUseSubcontractorsYesNo">Không</label>
            </div>
        </div>
        <div class="col-sm-2 text-right">
            <label>Ngày dự kiến trả:</label>
        </div>
        <div class="col-sm-4">
            <input id="datePickerTest" name="ResultDay" class="form-control form-control-sm" />
        </div>
    </div>
    <div class="form-row mb-2">
        <div class="col-sm-2">
            <label class="">Lưu mẫu:&nbsp;&nbsp;&nbsp;</label>
        </div>
        <div class="col-sm-3">
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="IsSaveSpecimenYes" name="TestIsSaveSpecimen" class="custom-control-input" value="true">
                <label class="custom-control-label" for="IsSaveSpecimenYes">Có</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="IsSaveSpecimenNo" name="TestIsSaveSpecimen" class="custom-control-input" value="false" checked>
                <label class="custom-control-label" for="IsSaveSpecimenNo">Không</label>
            </div>
        </div>
        <div class="col-sm-3 text-right">
            <label>Thời gian lưu mẫu:</label>
        </div>
        <div class="col-sm-4">
            <input type="text" name="TestSaveSpecimenTime" class="form-control form-control-sm" />
        </div>
    </div>
    <div class="form-row mb-2">
        <div class="col-sm-2">
            <label class="">Trả kết quả:&nbsp;&nbsp;&nbsp;</label>
        </div>
        <div class="col-sm-4">
            @foreach (var item in ViewData["ReturnInvoiceResultType"] as IEnumerable<NEVAR_AQC.Core.Models.Managements.CTGReturnInvoiceResultTypeModel>)
            {
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="Test @item.Name" value="@item.Id" name="TestResultType" class="custom-control-input" checked="@(item.Id == 1)">
                    <label class="custom-control-label" for="Test @item.Name">@item.Name</label>
                </div>
            }
        </div>
        <div class="col-sm-2 text-right">
            <label>Số lượng PKQTN:</label>
        </div>
        <div class="col-sm-4">
            <input type="number" name="TestResultInvoiceAmount" value="1" max="100" maxlength="3" class="form-control form-control-sm" />
        </div>
    </div>
    <div class="form-row mb-2">
        <div class="col-12"><label>Thông tin yêu cầu:</label></div>
    </div>
    <div class="form-row mb-2">
        <div class="col-12">
            <table class="table table-striped table-borderless">
                <thead class="bg-primary text-light">
                    <tr>
                        <th style="min-width: 150px; max-width: 200px">Đối tượng</th>
                        <th>Tên mẫu</th>
                        <th>Ký hiệu mẫu</th>
                        <th style="width: 80px">Số lượng</th>
                        <th>Lượng mẫu</th>
                        <th>Tình trạng mẫu</th>
                        <th>Chỉ tiêu thử nghiêm</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</form>